head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  title Inicio
.container

  br
  h1 Vista de Productos
  if body.length > 0
    table.table(style='background-color: gray; color: white;')
      thead
        tr
          th(scope='col') Nombre
          th(scope='col') Precio
          th(scope='col') Imagen
      tbody(style='color: black')
        each elem in body
          tr
            td(style='color: white;')=elem.title
            td(style='color: white;')=elem.price
            td
              img(src=elem.thumbnail)
    br
    form(action='/borrado' method='post')
      button.btn.btn-danger(type='submit') Borrar todo
  else
    p No hay productos
  br
