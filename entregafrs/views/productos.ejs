<!DOCTYPE html>
<html lang="en">

<head>
    <%- include(`./partials/head`) %>
</head>

<body>
    <header>
        <%- include('./partials/navbar', {current: `formProductos`}) %>
    </header>

    <div class="attention">
        <div class="cart-board">
            <% if (allProducts.length <=0) { %>
                <p>No se encontraron datos.</p>
                <% } else { %>
                    <table class="table">
                        <img src="https://farmacityar.vteximg.com.br/arquivos/ids/182742/Landing-Premium-2400x800.jpg?v=636800732447170000" class="img-fluid" alt="banner">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Imagen</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allProducts.forEach(product=>{ %>
                                <tr>
                                    <td scope="row">
                                        <%= product.id %>
                                    </td>
                                    <td>
                                        <%= product.nombre %>
                                    </td>
                                    <td>
                                        <%= product.descripcion %>
                                    </td>
                                    <td>
                                        $<%= product.precio %>
                                    </td>
                                    <td>
                                        <%= product.stock %>
                                    </td>
                                    <td>
                                        <img src="<%= product.thumbnail %>" width="150" height="150">
                                    </td>
                                    <td>
                                        <form action="/api/carrito/addProduct" method="POST">
                                            <input type="hidden" name="idUser" value=<%=userLog._id %> />
                                            <input type="hidden" name="idProduct" value=<%=product.id %> />
                                            <button class="btn btn-dark" type="submit">ü§çAgregar al carrito</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
        </div>
    </div>

    <footer>
        <%- include('./partials/footer') %>
    </footer>

</body>

</html>